{
    "name": "starchphp/starch",
    "description": "A collection of other libraries to build a PSR compatible micro-framework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Bram Van der Sype",
            "email": "bram.vandersype@gmail.com",
            "homepage": "https://github.com/Brammm"
        }
    ],
    "require": {
        "http-interop/http-server-handler": "^1.0",
        "http-interop/http-server-middleware": "^1.0",
        "mindplay/middleman": "^3.0.1",
        "nikic/fast-route": "^1.2",
        "psr/container": "^1.0",
        "zendframework/zend-diactoros": "^1.4"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^6.3",
        "php-di/invoker": "^2.0",
        "phpunit/phpunit": "^6.1"
    },
    "suggest": {
        "php-di/invoker": "Required if you want to use the provided RouterMiddleware",
        "php-di/php-di": "A very easy to configure PSR-11 container"
    },
    "autoload": {
        "psr-4": {
            "Starch\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Starch\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
